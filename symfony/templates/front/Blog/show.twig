{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('style/css/blog/index.css') }}">
  <link rel="stylesheet" href="{{ asset('style/css/blog/show.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/fosckeditor/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css') }}">
{% endblock %}

{% block nav %}
  <nav class="navbar navbar-b navbar-trans navbar-expand-md fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll" href="{{ path('blog_article_index') }}">{{ 'front.blog'|trans }}</a>
      <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link js-scroll" href="{{ path('home') }}">{{ 'front.home.alias'|trans }}</a></li>
          {% include 'block/signin.twig' %}
        </ul>
      </div>
    </div>
  </nav>
{% endblock %}

{% block intro %}
{% endblock %}

{% block main %}
  <!-- 게시글 -->
  <ion-icon name="person"></ion-icon>
  <div class="intro intro-single route bg-image" style="background-image: url({{ asset('style/img/' ~ Article.thumbnail) }})">
    <div class="overlay-mf" style="opacity: 0.3"></div>
    <div class="intro-content display-table">
      <div class="table-cell">
        <div class="container">
          <a href="{{ path('blog_article_show', { 'id': Article.id })}}">
            <h2 class="intro-title mb-4">{{ Article.title }}</h2>
          </a>
          <ol class="breadcrumb d-flex justify-content-center">
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="blog-wrapper sect-pt4" id="blog">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <!-- 블로그 본문 -->
          <div class="post-box">
            <div class="article-content">
              {{ Article.content|raw }}
            </div>
            <div class="post-meta">
              <ul>
                <li>
                  <span class="ion-chatbox"></span>
                  <a href="#comment">{{ Comment_cnt }}</a>
                </li>
                {% if Article.tag is not empty %}
                <li>
                  <span class="ion-pricetag"></span>
                  {% for Tag in Article.Tag %}
                    <li><a href="{{ url('blog_article_index', { 'tag': Tag.name })}}">{{ Tag.name }}</a></li>
                  {% endfor %}
                </li>
                {% endif %}
                <li>
                  <span class="ion-calendar"></span>
                  <span class="w-date">{{ Article.createdAt|date("l, Y.m.d") }}</span>
                </li>
              </ul>
            </div>
          </div>
          
          <!-- 블로그 댓글 폼 -->
          <div class="form-comments">
            <div class="form-header">
              <span><i class="fa fa-chevron-down"></i></span>
            </div>
            <div class="form-box">
              {{ render(url('blog_comment_new')) }}
            </div>
          </div>

          <!-- 블로그 댓글 -->
          <div id="comment" class="box-comments">
            <ul class="list-comments">
              {% for ArticleComment in Article.comment %}
              <li class="comment-parent">
                <div class="comment-avatar">
                  <img src="#" alt="">
                </div>
                <div class="comment-details">
                  <h4 class="comment-author">..</h4>
                  <p>{{ ArticleComment.content }}</p>
                  <span><small>{{ ArticleComment.createdAt|date("Y.m.d h:i:s") }}</small></span>
                  <a href="#"><small>{{ 'front.blog.article.comment.reply'|trans }}</small></a>
                </div>

                {% for recomment in ArticleComment.recomment %}
                <li class="comment-children">
                  <div class="comment-avatar">
                    <img src="img/testimonial-2.jpg" alt="">
                  </div>
                  <div class="comment-details">
                    <h4 class="comment-author">..</h4>
                    <p>{{ recomment.content}}</p>
                    <span><small>{{ recomment.createdAt|date("Y.m.d h:i:s") }}</small></span>
                    <a href="#"><small>{{ 'front.blog.article.comment.reply'|trans }}</small></a>
                  </div>
                </li>
                {% endfor %}
              </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <!-- 검색 -->
        {% include 'block/search.twig' %}

        <!-- 카테고리 -->
        {% include 'block/category.twig' %}

        <!-- 최근 작성한 게시물 -->
        {% include 'block/recent_articles.twig' %}

        <!-- 최근 추가된 태그 -->
        {% include 'block/recent_tags.twig' %}
      </div>
    </div>
  </section>
{% endblock %}

{% block rightside %}
  
  <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
  {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('blog_article_delete', { 'id': Article.id }) }}" class="rightside btn-delete"><i class="fa fa-trash"></i></a>
    <a href="{{ path('blog_article_edit'  , { 'id': Article.id }) }}" class="rightside btn-new"><i class="fa fa-edit"></i></a>
  {% endif %}

{% endblock %}

{% block javascripts %}
  <script src="{{ asset('bundles/fosckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js') }}"></script>
  <script src="{{ asset('style/js/validator.js') }}"></script>
  <script src="{{ asset('style/js/blog/show.js') }}"></script>
  <script>
    hljs.initHighlightingOnLoad();
  </script>
{% endblock %}