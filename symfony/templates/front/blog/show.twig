{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('bundles/fosckeditor/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css') }}">
  <link rel="stylesheet" href="{{ asset('style/css/blog/show.css') }}">
{% endblock %}

{% block nav %}
  <li class="nav-item"><a class="nav-link js-scroll" href="{{ path('home') }}">{{ 'front.home'|trans }}</a></li>
{% endblock %}

{% block intro %}
  <div class="intro intro-single route bg-image" style="background-image: url({{ asset('style/img/' ~ Article.thumbnail) }})">
    <div class="overlay-mf" style="opacity: 0.3"></div>
    <div class="intro-content display-table">
      <div class="table-cell">
        <div class="container">
          <a href="{{ path('blog_article_show', { 'id': Article.id })}}">
            <h2 class="intro-title mb-4">{{ Article.title }}</h2>
          </a>
          <ol class="breadcrumb d-flex justify-content-center">
          </ol>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block main %}
  <section class="blog-wrapper sect-pt4" id="blog">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="post-box">
            
            <!-- 본문 -->
            <div class="article-content">
              {{ Article.content|raw }}
            </div>

            <!-- 기타 (댓글 수, 태그 등) -->
            <div class="post-meta">
              <ul>
                <li>
                  <span class="ion-chatbox"></span>
                  <a href="#comment">{{ Comment_cnt }}</a>
                </li>
                {% if Article.tag is not empty %}
                <li>
                  <span class="ion-pricetag"></span>
                  {% for Tag in Article.Tag %}
                    <li><a href="{{ url('blog_article_index', { 'tag': Tag.name })}}">{{ Tag.name }}</a></li>
                  {% endfor %}
                </li>
                {% endif %}
                <li>
                  <span class="ion-calendar"></span>
                  <span class="w-date">{{ Article.createdAt|date("l, Y.m.d") }}</span>
                </li>
              </ul>
            </div>
          </div>
          
          <!-- 블로그 작성 댓글 폼 -->
          {{ render(path('blog_comment_new', {'article': Article.id})) }}

          <!-- 블로그 삭제 댓글 폼 -->
          {% include 'front/blog/comment/del.twig' %}

          <!-- 블로그 댓글 -->
          {% include 'front/blog/comment/index.twig' %}

        </div>
        <!-- 검색 -->
        {% include 'block/search.twig' %}

        <!-- 카테고리 -->
        {% include 'block/category.twig' %}

        <!-- 최근 작성한 게시물 -->
        {% include 'block/recent_articles.twig' %}

        <!-- 최근 추가된 태그 -->
        {% include 'block/recent_tags.twig' %}
      </div>
    </div>
  </section>
{% endblock %}

{% block rightside %}
  
  {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('blog_article_del', { 'id': Article.id }) }}" class="btn-shortcut two" data-toggle="tooltip" data-placement="left" title="{{ 'front.blog.article.tooltip.btn_del_article'|trans }}"><i class="fa fa-trash"></i></a>
    <a href="{{ path('blog_article_edit'  , { 'id': Article.id }) }}" class="btn-shortcut one" data-toggle="tooltip" data-placement="left" title="{{ 'front.blog.article.tooltip.btn_edit_article'|trans }}"><i class="fa fa-edit" style="padding: 10px 0 0 4px"></i></a>
  {% endif %}

{% endblock %}

{% block javascripts %}
  <script src="{{ asset('bundles/fosckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js') }}"></script>
  <script>
    $(function() {
      hljs.initHighlightingOnLoad();
      $('[data-toggle="tooltip"]').tooltip();
    });
  </script>
  <script src="{{ asset('style/js/validator.js') }}"></script>
  <script src="{{ asset('style/js/blog/show.js') }}"></script>
{% endblock %}