<div class="form-comments">
  <div class="form-header"><span><i class="fa fa-chevron-down"></i></span></div>
  
  <div class="form-box">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form._token) }}

    <div class="input-box flex">
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if app.user.thumbnail %}
          <img class="thumb "src="{{ app.user.thumbnail }}" alt="#" />
        {% else %}
          <img class="thumb "src="{{ asset('style/img/user_thumb.png') }}" alt="#" />
        {% endif %}
        <span>{{ app.user.username }}</span>
      {% else %}
      
      {{ form_widget(form.username, {'attr': {'style': 'margin: 8px 0;'}}) }}
      {{ form_errors(form.username) }}
 
      {{ form_widget(form.password, {'attr': {'style': 'margin: 8px 0;'}}) }}
      {{ form_errors(form.password) }}

      {% endif %}
    </div>
    <div>
      {{ form_widget(form.content, {'attr': {'style': 'margin: 8px 0;'}}) }}
      {{ form_errors(form.content) }}

      {{ form_widget(form.visible, {'attr': {'style': 'margin: 8px 0;'}}) }}
      {{ form_errors(form.visible) }}

      {{ form_widget(form.submit,  {'attr': {'style': 'float: right;'}}) }}
    </div>
    {{ form_end(form, {'render_rest': false}) }}
  </div>
</div>
