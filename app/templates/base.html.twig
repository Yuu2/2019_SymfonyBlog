<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <!-- <meta name="keywords" content=""> -->
        
    <title>{{ 'common.title'|trans }}</title>
    <link rel="icon" type="image/png" href="{{ asset('style/img/favicon.png') }}" /> 

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>

    <link rel="icon" href="{{ asset('style/img/favicon.png') }}" /> 

    <link rel="stylesheet" href="{{ asset('style/lib/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('style/lib/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('style/lib/animate/css/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('style/lib/ionicons/css/ionicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('style/lib/lightbox/css/lightbox.min.css') }}">

    <link rel="stylesheet" href="{{ asset('style/css/style.css') }}">

    {% block stylesheets %}
    {% endblock %}
    
  </head>
  <body id="page-top">

    <!-- header -->
    {% block header %}
    {% endblock %}
    <!-- NAV -->
    {% block nav %}
    <nav class="navbar navbar-b navbar-trans navbar-expand-md fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll" href="{{ path('home') }}">PortfolioBlog</a>
        <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link js-scroll" href="#about">About</a></li>
            <li class="nav-item"><a class="nav-link js-scroll" href="#blog">Portfolio</a></li>
            <li class="nav-item"><a class="nav-link js-scroll" href="{{ path('blog_index') }}">Blog</a></li>
            <li class="nav-item"><a class="nav-link js-scroll" href="#contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>
    {% endblock %}
    
    {% block main %}
    {% endblock %}

    <!-- right side -->  
    {% block rightside %}
    {% endblock %}

    <!-- footer -->  
    {% block footer %}
    <section class="paralax-mf footer-paralax bg-image sect-mt4 route">
      <div class="overlay-mf"></div>
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-sm-12">
              <div class="copyright-box">
                <p class="copyright">&copy; Copyright <strong><a href="{{ 'administrator.github'|trans }}">{{ 'administrator.id'|trans }}</a></strong>. All Rights Reserved</p>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </section>
    {% endblock %}

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <div id="preloader"></div>

    <script src="{{ asset('style/lib/jquery/js/jquery.min.js') }}"></script>
    <script src="{{ asset('style/lib/popper/js/popper.min.js') }}"></script>
    <script src="{{ asset('style/lib/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('style/lib/easing/js/easing.min.js') }}"></script>
    <script src="{{ asset('style/lib/counterup/js/jquery.waypoints.min.js') }}"></script>
    <script src="{{ asset('style/lib/counterup/js/jquery.counterup.min.js') }}"></script>
    <script src="{{ asset('style/lib/lightbox/js/lightbox.min.js') }}"></script>
    <script src="{{ asset('style/lib/typed/js/typed.min.js') }}"></script>

    <script src="{{ asset('style/js/main.js') }}"></script>

    {% block javascripts %}
    {% endblock %}
  
  </body>
</html>
